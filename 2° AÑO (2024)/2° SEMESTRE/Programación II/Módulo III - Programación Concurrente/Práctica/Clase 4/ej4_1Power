programa ej4_1Power

procesos
  proceso hacerPerimetro
  comenzar
    repetir 2
      repetir 20
        mientras HayFlorEnLaEsquina
          tomarFlor
        mover
      derecha
      repetir 15
        mientras HayFlorEnLaEsquina
          tomarFlor
        mover
      derecha
  fin
  
  proceso depositarFlores(ES flores:numero)
  comenzar
    mientras HayFlorEnLaBolsa
      flores:=flores+1
      depositarFlor
  fin
  
areas
  p1: AreaP (15,15,30,35)
  p2: AreaP (40,40,55,60)
  esqDeposito: AreaC (10,10,10,10)
  
robots
  robot tipo1
  variables
    flores:numero
  comenzar
    flores:=0
    hacerPerimetro
    BloquearEsquina(10,10)
    Pos(10,10)
    depositarFlores(flores)
    Pos(15,15)
    LiberarEsquina(10,10)
    Informar(flores)
  fin
  
  robot tipo2
  variables
    flores:numero
  comenzar
    flores:=0
    hacerPerimetro
    BloquearEsquina(10,10)
    Pos(10,10)
    depositarFlores(flores)
    Pos(40,40)
    LiberarEsquina(10,10)
    Informar(flores)
  fin
  
variables
  robot1:tipo1
  robot2:tipo2
  
comenzar
  AsignarArea(robot1,p1)
  AsignarArea(robot1,esqDeposito)
  AsignarArea(robot2,p2)
  AsignarArea(robot2,esqDeposito)
  Iniciar(robot1, 15,15)
  Iniciar(robot2, 40,40)
fin
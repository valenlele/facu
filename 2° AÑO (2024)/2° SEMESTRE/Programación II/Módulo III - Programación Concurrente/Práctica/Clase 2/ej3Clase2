  fin
  
variables
  robot1:tipo1
  robot2:tipo2
  robot3:tipo3
  
comenzar
  AsignarArea(robot1, ciudad)
  AsignarArea(robot2, ciudad)  
  AsignarArea(robot3, ciudad)
  Iniciar(robot1, 12,14)
  Iniciar(robot2, 17,10) 
  Iniciar(robot3, 22,6)
fin
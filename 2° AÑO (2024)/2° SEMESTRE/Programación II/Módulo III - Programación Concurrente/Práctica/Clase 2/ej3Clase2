programa ej3Clase2

procesos
  proceso izquierda
  comenzar
    repetir 3
      derecha
  fin

areas
  ciudad: AreaC (1,1,100,100)
  
robots
  robot tipo1
  variables
    nroEscalon:numero
    cantFloresEsc:numero
    cantPapEsc:numero
    cantEsc:numero
  comenzar
    nroEscalon:=1
    cantEsc:=0
    repetir 4
      cantFloresEsc:=0
      cantPapEsc:=0
      repetir nroEscalon
        mientras HayPapelEnLaEsquina
          tomarPapel
          cantPapEsc:=cantPapEsc+1
        mientras HayPapelEnLaBolsa
          depositarPapel
        mientras HayFlorEnLaEsquina
          tomarFlor
          cantFloresEsc:=cantFloresEsc+1
        mientras HayFlorEnLaBolsa
          depositarFlor
        mover
      derecha
      repetir nroEscalon
        mientras HayPapelEnLaEsquina
          tomarPapel
          cantPapEsc:=cantPapEsc+1
        mientras HayPapelEnLaBolsa
          depositarPapel
        mientras HayFlorEnLaEsquina
          tomarFlor
          cantFloresEsc:=cantFloresEsc+1
        mientras HayFlorEnLaBolsa
          depositarFlor
        mover  
      izquierda
      nroEscalon:=nroEscalon+1
      si cantPapEsc-cantFloresEsc=1
        cantEsc:=cantEsc+1
    Informar(cantEsc)
  fin
  
  robot tipo2
  variables
    nroEscalon:numero
    cantFloresEsc:numero
    cantPapEsc:numero
    cantEsc:numero
  comenzar

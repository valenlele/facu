programa ej2Clase2

procesos
  proceso recorrerAvenida(E numAv: numero)
  comenzar
    Pos(numAv, 1)
    repetir 99
      mover
  fin
  
areas
  l1: AreaP (10,10,10,19)
  l2: AreaP (10,20,19,20)
  l3: AreaP (20,11,20,20)
  l4: AreaP (11,10,20,10)
  
robots
  robot tipo1
  variables
    totPapeles:numero
  comenzar
    totPapeles:=0
    repetir 9
      mientras HayPapelEnLaEsquina
        tomarPapel
        totPapeles:=totPapeles+1
      mover
    mientras HayPapelEnLaEsquina
      tomarPapel
      totPapeles:=totPapeles+1
    Informar(totPapeles)
  fin
  
  robot tipo2
  variables
    totPapeles:numero
  comenzar
    totPapeles:=0
    derecha
    repetir 9
      mientras HayPapelEnLaEsquina
        tomarPapel
        totPapeles:=totPapeles+1
      mover
    mientras HayPapelEnLaEsquina
      tomarPapel
      totPapeles:=totPapeles+1
    Informar(totPapeles)
  fin
  
  robot tipo3
  variables
    totPapeles:numero
  comenzar
    totPapeles:=0
    repetir 2
      derecha
    repetir 9
      mientras HayPapelEnLaEsquina
        tomarPapel
        totPapeles:=totPapeles+1
      mover
    mientras HayPapelEnLaEsquina
      tomarPapel
      totPapeles:=totPapeles+1
    Informar(totPapeles)
  fin
  
  robot tipo4
  variables
    totPapeles:numero
  comenzar
    totPapeles:=0
    repetir 3
      derecha
    repetir 9
      mientras HayPapelEnLaEsquina
        tomarPapel
        totPapeles:=totPapeles+1
      mover
    mientras HayPapelEnLaEsquina
      tomarPapel
      totPapeles:=totPapeles+1
    Informar(totPapeles)
  fin
  
variables
  robot1:tipo1
  robot2:tipo2 
  robot3:tipo3
  robot4:tipo4
  
comenzar
  AsignarArea(robot1, l1)
  AsignarArea(robot2, l2)
  AsignarArea(robot3, l3)
  AsignarArea(robot4, l4)
  Iniciar(robot1, 10,10)
  Iniciar(robot2, 10,20)
  Iniciar(robot3, 20,20)
  Iniciar(robot4, 20,10)
fin
programa ej2-2bPower
  
procesos
  proceso  contarFlores(ES totFlores:numero)
  variables
    floresEsq:numero
  comenzar
    floresEsq:=0
    mientras HayFlorEnLaEsquina
      tomarFlor
      floresEsq:=floresEsq+1
    totFlores:=totFlores+floresEsq
    repetir floresEsq
      mientras HayFlorEnLaBolsa
        depositarFlor    
  fin
  
  proceso recorrerYcontar(E base:numero ; E altura:numero ; ES totFlores:numero)
  comenzar 
    repetir 2 
      repetir altura
        contarFlores(totFlores)
        mover
      derecha
      repetir base
        contarFlores(totFlores)
        mover
      derecha    
  fin
  
areas
  rectangulo1: AreaP (2,2,5,7)
  rectangulo2: AreaP (6,2,9,9)
  
robots
  robot tipo1
  variables
    totFlores:numero
  comenzar 
    totFlores:=0 
    recorrerYcontar(3,5,totFlores)   
    Informar(totFlores)  
  fin
  
  robot tipo2
  variables
    totFlores:numero
  comenzar 
    totFlores:=0 
    recorrerYcontar(3,7,totFlores)   
    Informar(totFlores)  
  fin
  
variables
  robot1:tipo1
  robot2:tipo2
  
comenzar
  AsignarArea(robot1,rectangulo1)
  AsignarArea(robot2,rectangulo2)
  Iniciar(robot1, 2,2)
  Iniciar(robot2, 6,2)
fin
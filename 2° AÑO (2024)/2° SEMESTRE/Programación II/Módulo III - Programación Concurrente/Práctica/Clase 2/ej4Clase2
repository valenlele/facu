programa ej4Clase2

procesos
  proceso izquierda
  comenzar
    repetir 3
      derecha
  fin
  
  proceso recorrerArea
  comenzar
    repetir 24
      repetir 99
        mientras HayFlorEnLaEsquina
          tomarFlor
        mover
      mientras HayFlorEnLaEsquina
        tomarFlor
      si PosCa/2=0
        izquierda
        mover
        izquierda
      sino
        derecha
        mover
        derecha
    repetir 99
      mientras HayFlorEnLaEsquina
        tomarFlor
      mover
    mientras HayFlorEnLaEsquina
      tomarFlor  
  fin

areas
  area1: AreaP (1,1,25,100)
  area2: AreaP (26,1,50,100)
  area3: AreaP (51,1,75,100)
  area4: AreaP (76,1,100,100)
  
robots
  robot tipo1
  comenzar
    recorrerArea
    Pos(51,1)
    recorrerArea
  fin
  
  robot tipo2
  comenzar
    recorrerArea
    Pos(76,1)
    recorrerArea
  fin
  
variables
  robot1:tipo1
  robot2:tipo2
  
comenzar
  AsignarArea(robot1, area1)
  AsignarArea(robot1, area3)
  AsignarArea(robot2, area2)  
  AsignarArea(robot2, area4)
  Iniciar(robot1, 1,1)
  Iniciar(robot2, 26,1) 
fin
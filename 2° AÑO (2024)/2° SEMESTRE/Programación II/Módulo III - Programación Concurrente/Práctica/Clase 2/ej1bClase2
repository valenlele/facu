programa ej1bClase2

procesos
  proceso recorrerYtomar(E numAv: numero; ES totFlores:numero; ES esqSinFlores:numero)
  variables
    floresEsq:numero
  comenzar
    Pos(numAv, 1)
    repetir 99
      floresEsq:=0
      mientras HayFlorEnLaEsquina
        floresEsq:=floresEsq+1
        tomarFlor
      mover
      si floresEsq=0
        esqSinFlores:=esqSinFlores+1
      totFlores:=totFlores+floresEsq
    mientras HayFlorEnLaEsquina
      floresEsq:=floresEsq+1
      tomarFlor
    si floresEsq=0
      esqSinFlores:=esqSinFlores+1
    totFlores:=totFlores+floresEsq
    mientras HayFlorEnLaBolsa
      depositarFlor
  fin
  
areas
  av1: AreaP (1,1,1,100)
  av3: AreaP (3,1,3,100)
  av5: AreaP (5,1,5,100)
  
robots
  robot tipo1
  variables
    totFlores:numero
    esqSinFlores:numero
  comenzar
    totFlores:=0
    esqSinFlores:=0
    recorrerYtomar(1,totFlores,esqSinFlores)
    Informar(totFlores)
    Informar(esqSinFlores)
  fin
  
  robot tipo2
  variables
    totFlores:numero
    esqSinFlores:numero
  comenzar
    totFlores:=0
    esqSinFlores:=0
    recorrerYtomar(3,totFlores,esqSinFlores)
    Informar(totFlores)
    Informar(esqSinFlores)
  fin
  
  robot tipo3
  variables
    totFlores:numero
    esqSinFlores:numero
  comenzar
    totFlores:=0
    esqSinFlores:=0
    recorrerYtomar(5,totFlores,esqSinFlores)
    Informar(totFlores)
    Informar(esqSinFlores)
  fin
  
variables
  robot1:tipo1
  robot2:tipo2
  robot3:tipo3
  
comenzar
  AsignarArea(robot1, av1)
  AsignarArea(robot2, av3)
  AsignarArea(robot3, av5)
  Iniciar(robot1, 1,1)
  Iniciar(robot2, 3,1)
  Iniciar(robot3, 5,1)
fin